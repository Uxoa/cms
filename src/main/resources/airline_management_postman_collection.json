{
    "info": {
        "name": "Airline Management API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"username\": \"testuser\", \"password\": \"password\"}"
                        },
                        "url": {
                            "raw": "http://localhost:8080/api/login",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "api",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "Add User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"username\": \"newuser\", \"email\": \"newuser@example.com\", \"password\": \"password\"}"
                        },
                        "url": {
                            "raw": "http://localhost:8080/user/add",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "user",
                                "add"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Flights",
            "item": [
                {
                    "name": "Search Flights",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "http://localhost:8080/api/flights/search?origin=JFK&destination=LAX&date=2025-01-15T10:00:00&seats=1",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "api",
                                "flights",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "origin",
                                    "value": "JFK"
                                },
                                {
                                    "key": "destination",
                                    "value": "LAX"
                                },
                                {
                                    "key": "date",
                                    "value": "2025-01-15T10:00:00"
                                },
                                {
                                    "key": "seats",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Flight Availability",
                    "request": {
                        "method": "PUT",
                        "url": {
                            "raw": "http://localhost:8080/api/flights/1/update",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "api",
                                "flights",
                                "1",
                                "update"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Profiles",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "http://localhost:8080/profile",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "profile"
                            ]
                        }
                    }
                },
                {
                    "name": "Upload Profile Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:8080/profile-image",
                            "protocol": "http",
                            "host": [
                                "localhost:8080"
                            ],
                            "path": [
                                "profile-image"
                            ]
                        },
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}